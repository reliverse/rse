generator client {
  provider = "prisma-client"
  output   = "../generated"
  moduleFormat = "esm"
  {{#if (eq runtime "bun")}}
  runtime = "bun"
  {{/if}}
  {{#if (eq runtime "node")}}
  runtime = "nodejs"
  {{/if}}
  {{#if (eq runtime "workers")}}
  runtime = "workerd"
  {{/if}}
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  {{#if (eq dbSetup "supabase")}}
  directUrl = env("DIRECT_URL")
  {{/if}}
  {{#if (eq dbSetup "planetscale")}}
  relationMode = "prisma"
  {{/if}}
}
