{
  "name": "@reliverse/rse-monorepo",
  "description": "@reliverse/rse",
  "author": "reliverse",
  "license": "MIT",
  "type": "module",
  "private": true,
  "scripts": {
    "rse": "bun cli/src/cli.ts",
    "pub": "bun run build && bun dler publish --skip-tip-2fa",
    "build": "bun clean && bun typecheck && bun dler build",
    "clean": "bun dler clean --presets build --force",
    "typecheck": "bun dler tsc --copy-logs",
    "check": "bun format && bun typecheck",
    "format": "bun biome check --write --unsafe",
    "latest": "bun dler update && bun install && bun check",
    "escaper": "bun rse escape --input 'packages/rse-rules/src/rules' --map 'md:.rules'",
    "scripts": "bun scripts/src/cli.ts",
    "bts": "bun scripts bts && bun check"
  },
  "workspaces": {
    "packages": [
      "cli",
      "packages/*",
      "scripts"
    ],
    "catalog": {
      "@types/bun": "^1.3.2",
      "typescript": "^5.9.3",
      "@reliverse/dler-logger": "^2.2.3",
      "@reliverse/dler-matcher": "^2.2.3",
      "@reliverse/dler-launcher": "^2.2.3",
      "@reliverse/dler-prompt": "^2.2.3",
      "@reliverse/dler-helpers": "^2.2.3",
      "@reliverse/dler-pkg-tsc": "^2.2.3",
      "@reliverse/dler-mapper": "^2.2.3",
      "@reliverse/dler-colors": "^2.2.3",
      "@reliverse/dler-spinner": "^2.2.3",
      "@reliverse/dler-fs-utils": "^2.2.3",
      "@reliverse/dler-pathkit": "^2.2.3",
      "jsonc-parser": "^3.3.1",
      "ts-morph": "^27.0.2",
      "magic-string": "^0.30.21",
      "execa": "^9.6.0",
      "zod": "^4.1.12",
      "dotenv": "^17.2.3",
      "yaml": "^2.8.1",
      "handlebars": "^4.7.8",
      "gradient-string": "^3.0.0"
    }
  },
  "devDependencies": {
    "@reliverse/dler": "^2.2.3",
    "@biomejs/biome": "^2.3.6"
  },
  "packageManager": "bun@1.3.2",
  "engines": {
    "bun": ">=1.3.2"
  }
}
